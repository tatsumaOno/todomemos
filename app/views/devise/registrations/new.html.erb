
<div class="container form_wrapper mt-5">
  <p class="h2 text-center">新規登録</p>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-group pb-1">
    <%= f.label :name %><br />
    <%= f.text_field :name,autofocus: true,class: 'form-control form_list', placeholder: '名前を入力してください' %>
  </div>
  <div class="form-group pb-1">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control form_list",placeholder: 'メールアドレスを入力してください' %>
  </div>
  <div class="form-group pb-1">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password",class: 'form-control form_list',placeholder: 'パスワードを入力してください' %>
  </div>
  <div class="form-group pb-1">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'form-control form_list',placeholder: 'パスワードを再入力してください' %>
  </div>
  <div class="form-group pb-1">
    <%= f.file_field :avatar %>
  </div>
  <div class="form-group">
    <%= f.submit '新規登録',class: 'btn btn-warning btn-block text-secondary mt-5' %>
  </div>
  <% end %>
</div>
