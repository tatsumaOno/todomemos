<div class="profile_wrapper">
  <div class="profile_wrapper_header">
    <div class="profile_wrapper_header_content">
      <div class="profile_wrapper_header_content_image">
        <%= image_tag @user.avatar,class: "profile_avatar" %>
      </div>
      <div class="profile_wrapper_header_content_details">
        <h3 class="profile_name"><%= @user.name %></h3>
      </div>
    </div>
  </div>
  <div class="tab_wrapper">
    <div class='tabs'>
      <ul class='horizontal'>
        <li><a href="#tab-1">profile</a></li>
        <li><a href="#tab-2">card</a></li>
        <li><a href="#tab-3">chart</a></li>
      </ul>
      <div id="tab-1">
        <div class="activity_logs">
          <i class="fas fa-align-right"></i>
          <h2 class="tab_title">Activity log</h2>
          <% @activities.first(15).each do |activity| %>
            <div class="activity_log">
              <%= image_tag @user.avatar,class: "activity_log_avatar" %>
              <span class="activity_name"><%= activity.owner.name %></span>さんが
              <%= activity.trackable_type %>
              <%= t("activity.#{activity.key}")%>
              <div class="activity_time">
              <%= activity.created_at.strftime('%Y/%m/%d/ %H:%M')  %>
              </div>
              <hr class="bar_box">
            </div>
          <% end %>
        </div>
      </div>
      <div id="tab-2">afa</div>
      <div id="tab-3">
        <div class="activity_logs">
          <i class="fas fa-align-right"></i>
          <h2 class="tab_title">Digestibility task</h2>
          <%= column_chart @complete_cards,colors: ["#2b8"],width: "100%", height: "300px"%>
        </div>
      </div>
    </div>
  </div>
</div>
